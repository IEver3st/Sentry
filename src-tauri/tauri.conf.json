{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sentry Backup",
  "version": "1.0.1",
  "identifier": "sentry.ever3st.dev",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Sentry Backup",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "decorations": false,
        "resizable": true,
        "transparent": false,
        "visible": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "id": "main"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": "(mailto:\\w+|tel:\\w+|https?://\\w+|file://.+)"
    },
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/IEver3st/Sentry-Releases/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "RWQPWLsmo6JL8hES6iqnteQwfnyy5dq0EDXJ/rqDzflnX6J4WKstdZXu"
    }
  }
}
